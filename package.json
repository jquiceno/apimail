{
  "name": "devmail",
  "version": "0.1.0",
  "description": "Small project to manage email messages and their events, initially based on mailgun",
  "main": "./dist/index.js",

  "repository": {
    "type": "git",
    "url": "https://github.com/jquiceno/devmail.git"
  },
  "bugs": {
    "url": "https://github.com/jquiceno/devmail.git/issues"
  },
  "homepage": "https://pimex.co/",
  "scripts": {
    "dev-test": "NODE_ENV=test ava -v -s -- -w",
    "test": "NODE_ENV=test ava -v -s ./test/**.js",
    "init": "npm run build && pm2 start ./dist/server.js",
    "start": "npm run build && node ./dist/server.js",
    "build": "babel src --out-dir dist",
    "dev": "pm2 start ./dist/server.js --watch && babel src --out-dir dist --watch"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "author": "jquiceno",
  "license": "ISC",
  "dependencies": {
    "boom": "^7.3.0",
    "defaults": "^1.0.3",
    "firebase-admin": "^6.5.0",
    "getfig": "0.0.3",
    "hapi": "^17.8.1",
    "joi": "^14.3.1",
    "mailgun-js": "^0.22.0",
    "moment": "^2.23.0",
    "pm2": "^3.2.8",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "schemio": "^0.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "ava": "^1.0.1",
    "delay": "^4.1.0",
    "uuid-base62": "^0.1.0"
  }
}
