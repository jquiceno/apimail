{
  "name": "@pimex/email",
  "version": "0.0.14",
  "description": "Pimex email lib for Pimex services",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/pimex/core-email.git"
  },
  "bugs": {
    "url": "https://gitlab.com/pimex/core-email/issues"
  },
  "homepage": "https://pimex.co/",
  "scripts": {
    "dev": "NODE_ENV=test node ./dist/server.js",
    "test": "PIMEX_CONFIG=. NODE_ENV=test ava -v -s ./test/**.js",
    "server-start": "pm2 start ./dist/server.js",
    "build": "babel src --out-dir dist",
    "postinstall": "npm run build",
    "watch": "babel src --out-dir dist --watch"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "author": "jquiceno",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/firestore": "^0.14.1",
    "hapi": "^17.5.2",
    "mailgun-js": "^0.19.0",
    "pm2": "^2.10.4",
    "request": "^2.87.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "uuid-base62": "^0.1.0"
  },
  "pimex": {
    "modules": {
      "email": "./config/config.json"
    }
  }
}
